{
  "version": 2,
  "builds": [
    {
      "src": "dist/main.js",
      "use": "@vercel/node",
      "config": { "maxLambdaSize": "2048MB" },
      "functions": [
        {
          "includeFiles": ["prisma/**"],
          "src": "dist/*.js"
        }
      ]
    }
  ],
  "routes": [
    {
      "src": "/(.*)",
      "dest": "dist/main.js"
    }
  ]
}